package com.revature.app;

import java.security.MessageDigest;
import java.security.NoSuchAlgorithmException;
import java.security.SecureRandom;

public class testHash {

	// hexadecimal = hexArray
	private final static char[] hexArray = "0123456789ABCDEF".toCharArray();
	
	public static void hasingPie(String args[]) throws NoSuchAlgorithmException {
		
		String data = "pie";
		String algorithm = "SHA-256";
		byte[] salt = createSalt();
		System.out.println("pie :" + hashUsername(data, algorithm, salt));
	}
	
	private static String hashUsername(String data, String algorithm, byte[] salt) {

		MessageDigest digest = MessageDigest.getInstance(algorithm);
		digest.reset();
		digest.update(salt);
		byte[] hash = digest.digest(username.getBytes());
		
		return bytesToStringHex(hash);
	}

	// convert bytes To String
	private static String bytesToStringHex(byte[] bytes) {
		char[] hexChars = new char[bytes.length * 2 ];
		for (int i = 0; i < bytes.length; i++) {
			int j = bytes[i] & 0xFF;
			hexChars[j * 2] = hexArray[j >>> 4];
			hexChars[j * 2 + 1] = hexArray[j & 0x0F];
		}
			
		return new String(hexChars);
	}

	// create salt
	public static byte[] createSalt() {

		byte[] bytes = new byte[20];
		SecureRandom random = new SecureRandom();
		random.nextBytes(bytes);
		
		return bytes;
	}
	
	// hash username

}
